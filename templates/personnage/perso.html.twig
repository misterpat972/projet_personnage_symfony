{% extends 'base.html.twig' %}

{% block title %}Personnages{% endblock %}

{# titre de la page #}
{% block monTitre %}Listes des personnage{% endblock %}

{# corp de page #}
{% block body %}
{# récupération des données du controleur personnage #}
<table class="table">
    <tr class="thead-dark">
        <th>Image</th>
        <th>Nom</th>
        <th>Age</th>
        <th>Sexe</th>
        <th>Force</th>
        <th>Agilité</th>
        <th>Intelligence</th>
    </tr>
    {% for player in players %}
    <tr>
        <td><img src="{{ asset('images/personnages/' ~  player.nom ~ '.png')}}"></td>
        <td><a href= "{{ path('afficher_personnage', {'nom' :  player.nom|lower}) }}"> {{ player.nom }} </a></td>   
        <td>{{ player.age }}</td>   
        <td>
            {% if player.sexe %}
                Homme
            {% else %}
                Femme
            {% endif %}
        </td>   
        <td>{{ player.carac.force }}</td>   
        <td>{{ player.carac.agilite }}</td>   
        <td>{{ player.carac.intelligence }}</td>   

    </tr>
    {% endfor %}
</table>


{% endblock %}
